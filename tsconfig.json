{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["es2015"],
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "src/ties"
  ],
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
